{
    "name": "auth-service",
    "version": "1.0.0",
    "description": "Auth Service",
    "main": "server.js",
    "scripts": {
        "start": "node index.js",
        "lint": "eslint --fix . && prettier \"**/*.{js,jsx}\" --write",
        "test": "./node_modules/.bin/mocha 'tests/**/*.js' --recursive -t 5000",
        "coverage": "nyc npm run test",
        "create-jwks": "node ./cmd/create-jwks.js",
        "rotate-jwks": "node ./cmd/rotate-jwks.js",
        "clean-jwks": "node ./cmd/clean-jwks.js",
        "check-jwks": "node ./cmd/check-jwks.js",
        "sign-token": "node ./cmd/sign-token.js"
    },
    "author": "",
    "license": "Apache-2.0",
    "dependencies": {
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.5",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.1",
        "express-prom-bundle": "^6.5.0",
        "helmet": "^6.0.1",
        "log4js": "^6.8.0",
        "node-jose": "^2.2.0",
        "prom-client": "^14.1.1",
        "redis": "^4.6.1"
    },
    "devDependencies": {
        "chai": "^4.3.6",
        "chai-as-promised": "^7.1.1",
        "eslint": "^8.34.0",
        "husky": "^3.1.0",
        "lint-staged": "^13.1.2",
        "mocha": "^10.0.0",
        "node-mocks-http": "^1.10.1",
        "nyc": "^15.1.0",
        "prettier": "^2.8.8",
        "redis-mock": "^0.56.3",
        "sinon": "^14.0.0",
        "supertest": "^6.3.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js, jsx}": [
            "eslint --cache --fix",
            "prettier --write"
        ]
    }
